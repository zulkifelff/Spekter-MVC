@{
    ViewBag.Title = "Shopping Cart";
}

<link rel="stylesheet" href="~/Content/Cart.css" />

@{

    var modelVariable = Model;
}
<div class="mt80 clearfix">
    @Html.Partial("~/Views/Shared/Breadcrumbs.cshtml", new ViewDataDictionary { { "breadcrumbData", modelVariable } })

</div>


<div class="container-fluid no-padding">
    <div class="container no-padding mt40">
        <h3 class="main-page-heading">Shopping Cart</h3>
    </div>

    <div class="container no-padding mt40">
        <div class="table-responsive">
            <div class="table table-bordred">
                <div class="clearfix table-header">
                    <div class="each-head-row">
                        <span class="table-header-center">Image</span>
                        <span class="table-header-center">Product Name</span>
                        <span class="table-header-center">Size</span>
                        <span class="table-header-center">Color</span>
                        <span class="table-header-center">Quantity</span>
                        <span class="table-header-center">Status</span>
                        <span class="table-header-center">Price</span>
                        <span class="table-header-center">Remove</span>
                    </div>

                </div>

                <div class="clearfix table-body">

                    <div data-product-id="1" class="each-product-row">


                        <span class="table-body-center">
                            <img class="product-image" src="~/Content/Images/jacket-leather-2.png" />
                        </span>
                        <span class="table-body-center">Leaspaner Jacket</span>
                        <span class="table-body-center">XL</span>
                        <span class="table-body-center">Black</span>
                        <span class="table-body-center"><span id="decrease-quantity" class="table-quantity-btn pointer">-</span><span class="margin-button-quantity">1</span><span id="increase-quantity" class=" pointer table-quantity-btn">+</span></span>
                        <span class="table-body-center">Pending</span>
                        <span class="table-body-center">400</span>
                        <span class="table-body-center"><img class="pointer delete-product" src="~/Content/Images/trash.svg" /></span>
                    </div>

                    <div data-product-id="2" class="each-product-row">


                        <span class="table-body-center">
                            <img class="product-image" src="~/Content/Images/jacket-leather-4.png" />
                        </span>
                        <span class="table-body-center">Leaspaner Jacket</span>
                        <span class="table-body-center">XL</span>
                        <span class="table-body-center">Black</span>
                        <span class="table-body-center"><span id="decrease-quantity" class="table-quantity-btn pointer">-</span><span class="margin-button-quantity">1</span><span id="increase-quantity" class=" pointer table-quantity-btn">+</span></span>
                        <span class="table-body-center">Pending</span>
                        <span class="table-body-center">400</span>
                        <span class="table-body-center"><img class="pointer delete-product" src="~/Content/Images/trash.svg" /></span>
                    </div>


                    <div data-product-id="3" class="each-product-row">


                        <span class="table-body-center">
                            <img class="product-image" src="~/Content/Images/jacket-leather-5.png" />
                        </span>
                        <span class="table-body-center">Leaspaner Jacket</span>
                        <span class="table-body-center">XL</span>
                        <span class="table-body-center">Black</span>
                        <span class="table-body-center"><span id="decrease-quantity" class="table-quantity-btn pointer">-</span><span class="margin-button-quantity">1</span><span id="increase-quantity" class=" pointer table-quantity-btn">+</span></span>
                        <span class="table-body-center">Pending</span>
                        <span class="table-body-center">400</span>
                        <span class="table-body-center"><img class="pointer delete-product" src="~/Content/Images/trash.svg" /></span>
                    </div>







                </div>

            </div>

            <div class="clearfix"></div>


        </div>
    </div>

    <div class="container no-padding mt40">
        <div class="col-md-4  col-sm-12 text-left">
            <div class="col-sm-12 col-md-12 no-padding">
                <label class="label-cart-heading">
                    My Coupon
                </label>
            </div>


            <div class="col-sm-12 col-md-12 no-padding">
                <div class="col-md-6 col-sm-12 no-padding mt10">
                    <input class="coupan-code-style" placeholder="Coupon Code" />
                </div>

                <div class="col-md-5 col-md-offset-1 col-sm-12 no-padding mt10">
                    <button class="apply-btn-coupan">Apply Button</button>
                </div>
            </div>

            <div class="col-md-12 col-sm-12 no-padding mt20 notice-styling">
                <label>
                    Note:
                </label>
                <span>We ship USPS, UPS, FedEx. We research cheapest rate possible</span>
            </div>

        </div>
        <div class="col-md-4 col-md-offset-4 col-sm-12 text-right">
            <div class="col-md-12 col-sm-12 no-padding total-content-style clearfix">
                <div class="pull-left">
                    <span>Total</span>
                </div>

                <div class="pull-right">
                    <span>$ 4000</span>
                </div>
            </div>

            <div class="col-md-12 col-sm-12 no-padding mt10 clearfix">
                <div class="total-content-item-position">
                    <span class="total-content-item-style">4 Items</span>
                </div>


            </div>

            <div class="col-md-12 col-sm-12 no-padding mt20">
                <button onclick="redirectToCheckout()" class="apply-btn-coupan">Checkout</button>
            </div>

        </div>
    </div>

    <div class="mt40 container no-padding"></div>
</div>

<script>

    function redirectToCheckout() {
        location.href = "/Checkout/Index";
    }
</script>